doctype html
html(ng-app="app")
    head

        meta(charset='utf-8')
        meta(name='format-detection', content='telephone=no')
        meta(name='msapplication-tap-highlight', content='no')
        meta(name='viewport', content='user-scalable=no, initial-scale=1, width=device-width')

        title {{constants.APP_NAME}}

        link(rel='stylesheet', href='css/postcoder.vendor.min.css')
        link(rel='stylesheet', href='css/postcoder.assets.min.css')

        script(src='js/postcoder.vendor.min.js', defer='')
        script(src='js/postcoder.assets.min.js', defer='')

    body(ng-cloak="")

        nav.navbar.navbar-fixed-top.navbar-blue

            .container-fluid

                .row

                    .col-sm-3

                        .navbar-brand PostCoder-Search

                    .col-sm-6

                        ul.menu.nav.navbar-nav

                            li
                                a(href="javascript:void(0)" ) IE Address

                    .col-sm-3

                        ul.nav.navbar-nav

                            li
                                a(href="javascript:void(0)") Config


        div.full-height(ui-view="")