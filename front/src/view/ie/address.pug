.container

    h4.page-title Irish address lookup

    .row

        .col-sm-4

            form.panel.panel-default(ng-submit="ctrl.filter()" sticky="" offset="100")


                .panel-heading

                    h3.panel-title Filter

                .panel-body

                    .row

                        .col-xs-12

                            .form-group

                                label Eircode or address fragment:

                                input.form-control(type="text" ng-model="ctrl.query")


                    .row

                        .col-xs-12

                            label Query Parameters:

                    .row

                        .col-xs-6

                            .form-group

                                .input-group

                                    span.input-group-addon Key:

                                    input.form-control(type="text" ng-model="ctrl.param.key")

                        .col-xs-6

                            .form-group

                                .input-group

                                    span.input-group-addon Value:

                                    input.form-control(type="text" ng-model="ctrl.param.value")

                .panel-footer

                    button.btn.btn-primary(type="submit") Send


        .col-sm-8

            .panel.panel-default

                .panel-heading

                    h3.panel-title Results

                .panel-body

                    .table-responsive

                        table.table.table-hover.table-striped

                            thead

                                th Address

                            tbody

                                tr(ng-repeat="address in ctrl.addresses track by $index")

                                    td {{address}}





